package proyecto;
import java.util.*;
public class LeerMain {
    
    public static void main(String[]args){
        
        Leer();
    }
    
    public static void Leer(){
        Scanner leer = new Scanner (System.in);
        int num=0;
        System.out.println("Presione ");
        System.out.println("[1] Para Agregar un nuevo Contacto");
        System.out.println("[2] Buscar una persona");
        System.out.println("[3] Eliminar una persona");
        System.out.println("[4] Consultar");
        System.out.println("[5] Salir");
        num=leer.nextInt();
        switch(num){
            case 1:
                AgregarContacto();
                break;
        }
        
    }
    //Metodo para agregar contactos
    
        public static void AgregarContacto(){
        
        Scanner leer = new Scanner (System.in);                 
        char tipo;
        byte clave;
        long num;
        int u=5;
        String buscar;
        int j=0;
        char p;

            ArrayList<Telefono> per = new ArrayList<Telefono>();
           System.out.println("Desea agregar un contacto?\n Presione 1 para decir que si\n presione cualquier numero para decir que no");
           u=leer.nextInt();     

        while(u==1){
            System.out.println("Cual es el tipo de Telefono del contacto?");
            tipo=leer.next().charAt(0);
            System.out.println("Cual es la clave de su pais?");
            clave=leer.nextByte();
            System.out.println("Cual es su numero");
            num=leer.nextLong();
            System.out.println("Quieres agregar otro contacto? Presiona 1 para si y Presiona cualquier numero para no");
            per.add( new Telefono(tipo,clave,num));
            u=leer.nextInt();   
    }
        System.out.println("Buscando contacto");
        long personaTel;
        int var=1;
        System.out.println("Numerp de persona a buscar: ");
        personaTel = leer.nextLong();
        for(int i=0; i<per.size(); i++){
            if(per.get(i).getNumTelefono()==personaTel){
                var=i;
                System.out.println(var);
            }
        }
        //System.out.println(per.get(var).getNumTelefono());
            
        
        System.out.println(per.get(var).toString());
    }
